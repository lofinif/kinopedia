<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.filter.FilterResultFragment">
    <data>
        <variable
            name="viewModel"
            type="com.example.kinopedia.ui.filter.FilterViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_home_background">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/prussian_blue">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="@drawable/empty_background"
            />

        <TextView
            android:id="@+id/title_toolbar_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:textAppearance="@style/toolbar_title"
            android:text="@string/title_fragment_filter_result"
            />

    </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/status_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            app:loadingStatusElement="@{viewModel.status}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_filter_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.1dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:paddingBottom="12dp"
            android:clipToPadding="false"
            listDataFilmsByFilters="@{viewModel.dataFilmsByFilter}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constrainedWidth="true" />

    </LinearLayout>
</layout>