<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shimmer_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_auto_start="true">


        <View
            android:id="@+id/poster_shimmer"
            android:layout_width="@dimen/poster_favourite_width"
            android:layout_height="@dimen/poster_favourite_height"
            android:layout_gravity="start"
            android:background="@drawable/corner_view_shimmer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/name_movie_shimmer"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_gravity="top|center"
            android:layout_marginStart="7dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/corner_view_shimmer"
            app:layout_constraintStart_toEndOf="@+id/poster_shimmer"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/name_original_movie_shimmer"
            android:layout_width="125dp"
            android:layout_height="12dp"
            android:layout_gravity="top|center"
            android:layout_marginStart="7dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_view_shimmer"
            app:layout_constraintStart_toEndOf="@+id/poster_shimmer"
            app:layout_constraintTop_toBottomOf="@+id/name_movie_shimmer" />

        <View
            android:id="@+id/year_movie_shimmer"
            android:layout_width="35dp"
            android:layout_height="15dp"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="7dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/corner_view_shimmer"
            app:layout_constraintStart_toEndOf="@+id/poster_shimmer"
            app:layout_constraintTop_toBottomOf="@+id/name_original_movie_shimmer" />

        <View
            android:id="@+id/genre_movie_shimmer"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/corner_view_shimmer"
            app:layout_constraintStart_toEndOf="@+id/year_movie_shimmer"
            app:layout_constraintTop_toBottomOf="@+id/name_original_movie_shimmer" />

        <View
            android:id="@+id/country_movie_shimmer"
            android:layout_width="35dp"
            android:layout_height="15dp"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="7dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/corner_view_shimmer"
            app:layout_constraintStart_toEndOf="@+id/poster_shimmer"
            app:layout_constraintTop_toBottomOf="@+id/year_movie_shimmer" />

        <View
            android:id="@+id/imdb_logo_shimmer"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/gray_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/kinopoisk_logo_shimmer"
            android:layout_width="35dp"
            android:layout_height="15dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/corner_view_shimmer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imdb_logo_shimmer" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>