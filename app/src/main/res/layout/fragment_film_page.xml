<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.kinopedia.ui.film.viewmodel.FilmPageViewModel" />

    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:expandedTitleGravity="bottom"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <ImageView
                    android:id="@+id/poster_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_anchor="@id/name_movie"
                    android:scaleType="fitXY"
                    app:layout_anchorGravity="start"
                    app:layout_collapseMode="parallax" />

                <ImageView
                    android:id="@+id/poster"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    app:layout_anchor="@id/name_movie"
                    app:layout_anchorGravity="start"
                    app:layout_collapseMode="parallax"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    tools:src="@drawable/test_poster" />

                <com.google.android.material.appbar.MaterialToolbar
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_collapseMode="pin"/>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_home_background"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/content_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="24dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/content_end"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_end="24dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/name_end_line"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_end="99dp" />

            <TextView
                android:id="@+id/year_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Test"
                android:textAppearance="@style/name_original_movie_film_page"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/name_end_line"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintTop_toBottomOf="@+id/name_movie_original"
                tools:text="2020" />
            <TextView
                android:id="@+id/premier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textAppearance="@style/name_original_movie_film_page"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/name_end_line"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/title_premier"
                app:layout_constraintTop_toBottomOf="@+id/year_movie"
                tools:text="2020" />

            <ImageButton
                android:id="@+id/notification_premier"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/empty_background"
                android:src="@drawable/baseline_notifications_24"
                app:layout_constraintStart_toEndOf="@id/premier"
                app:layout_constraintTop_toBottomOf="@id/year_movie"
                />
            <TextView
                android:id="@+id/title_premier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Премьера в России: "
                android:textAppearance="@style/name_original_movie_film_page"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/name_end_line"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintTop_toBottomOf="@+id/year_movie"
                />

            <TextView
                android:id="@+id/name_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:text="@{viewModel.data.displayName}"
                android:textAppearance="@style/name_movie_film_page"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/name_end_line"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Маша" />

            <TextView
                android:id="@+id/name_movie_original"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:text="@{viewModel.data.displayOriginalName}"
                android:textAppearance="@style/name_original_movie_film_page"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/name_end_line"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintTop_toBottomOf="@+id/name_movie"
                tools:text="Masha" />

            <TextView
                android:id="@+id/description_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/description_about_film"
                android:textAppearance="@style/title_film_page"
                app:layout_constraintEnd_toEndOf="@id/content_end"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintTop_toBottomOf="@id/recyclerView_externalSources" />

            <TextView
                android:id="@+id/description_movie_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/description_film_page"
                android:layout_marginTop="10dp"
                android:text="@{viewModel.data.displayDescription}"
                android:maxLines="4"
                android:ellipsize="end"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintEnd_toEndOf="@id/content_end"
                app:layout_constraintTop_toBottomOf="@id/description_movie"
                />

            <TextView
                android:id="@+id/title_actors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_actors"
                android:textAppearance="@style/title_film_page"
                android:layout_marginTop="15dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintEnd_toStartOf="@+id/content_end"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintTop_toBottomOf="@id/description_movie_more" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_actors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingEnd="24dp"
                android:paddingStart="6dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_actors"
                app:spanCount="4"
                listDataActorAndStaff="@{viewModel.dataActorFilmPage}"
                />

          <TextView
                android:id="@+id/title_stuff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_stuff"
                android:textAppearance="@style/title_film_page"
                android:layout_marginTop="15dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toBottomOf="@id/recyclerView_actors"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintEnd_toEndOf="@id/content_end"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingEnd="24dp"
                android:paddingStart="6dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_stuff"
                listDataActorAndStaff="@{viewModel.dataStaff}"
                />

            <TextView
                android:id="@+id/title_similar_films"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_similar_films"
                android:layout_marginTop="15dp"
                android:textAppearance="@style/title_film_page"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintEnd_toEndOf="@id/content_end"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toBottomOf="@id/recyclerView_staff"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_similar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:paddingEnd="12dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_similar_films"
                listDataSimilar="@{viewModel.dataSimilar}"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_externalSources"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:paddingStart="6dp"
                android:paddingEnd="12dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_external"
                listDataExternal="@{viewModel.dataExternalSources}"
                />

            <Button
                android:id="@+id/button_favourite"
                android:background="@drawable/button_like_film_page"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="24dp"
                android:text="@string/to_favourite"
                app:layout_constraintBottom_toTopOf="@+id/title_external"
                app:layout_constraintEnd_toStartOf="@+id/content_end"
                app:layout_constraintStart_toStartOf="@+id/content_start"
                app:layout_constraintTop_toBottomOf="@+id/title_premier" />

            <TextView
                android:id="@+id/title_external"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/where_to_watch"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/title_film_page"
                app:layout_constraintTop_toBottomOf="@id/button_favourite"
                app:layout_constraintStart_toStartOf="@id/content_start"
                app:layout_constraintEnd_toEndOf="@id/content_end"
                app:layout_constraintBottom_toTopOf="@id/recyclerView_externalSources">
            </TextView>

            <TextView
                android:id="@+id/rating_kinopoisk"
                style="@style/rating_film_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="31dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/content_end"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/kinopoisk_logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:text="9.9" />

            <TextView
                android:id="@+id/rating_imdb"
                style="@style/rating_film_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="19dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/content_end"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/imdb_logo"
                app:layout_constraintTop_toBottomOf="@id/rating_kinopoisk"
                app:layout_constraintVertical_bias="0.0"
                tools:text="2.6" />

            <ImageView
                android:id="@+id/imdb_logo"
                android:layout_width="35dp"
                android:layout_height="18dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="25dp"
                android:src="@drawable/ic_imdb_colored"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@+id/name_end_line"
                app:layout_constraintTop_toBottomOf="@id/kinopoisk_logo"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:id="@+id/kinopoisk_logo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_kinopoisk_colored"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/content_end"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/name_end_line"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
       <ImageView
        android:id="@+id/status_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loadingStatus="@{viewModel.status}" />
    </FrameLayout>
</layout>