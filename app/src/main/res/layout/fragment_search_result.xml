<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.search.view.SearchResultFragment"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_home_background"
    android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_more"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/prussian_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:background="@drawable/empty_background"
                />
            <SearchView
                android:id="@+id/search_button_search_result"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:windowSoftInputMode="adjustPan|stateHidden"
                android:background="@drawable/search_bar"
                android:closeIcon="@drawable/baseline_close_24"
                android:iconifiedByDefault="false"
                android:queryBackground="@drawable/empty_background"
                android:queryHint="Поиск фильмов"
                android:searchIcon="@null" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_marginStart="12dp"
            android:paddingBottom="12dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_more"
            app:layout_constraintVertical_bias="0.05" />

    <include android:id="@+id/search_result_error"
        layout="@layout/layout_loading_error"/>

    <include android:id="@+id/search_result_loading"
        layout="@layout/layout_films_list_loading_vertical"/>


</LinearLayout>