<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_home_background">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shimmer_auto_start="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/search_button_shimmer"
                android:layout_width="310dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintEnd_toStartOf="@+id/filters_button_shimmer"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/filters_button_shimmer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/title_genre_shimmer"
                android:layout_width="130dp"
                android:layout_height="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_button_shimmer" />

            <View
                android:id="@+id/button_genre_drama_shimmer"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintEnd_toStartOf="@+id/button_genre_comedy_shimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_genre_shimmer" />

            <View
                android:id="@+id/button_genre_detective_shimmer"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintEnd_toStartOf="@+id/button_genre_fantasy_shimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_genre_drama_shimmer" />

            <View
                android:id="@+id/button_genre_comedy_shimmer"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button_genre_drama_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/title_genre_shimmer" />

            <View
                android:id="@+id/button_genre_fantasy_shimmer"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button_genre_detective_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/button_genre_comedy_shimmer" />

            <View
                android:id="@+id/button_genre_thriller_shimmer"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintEnd_toStartOf="@+id/button_genre_horror_shimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_genre_detective_shimmer" />

            <View
                android:id="@+id/button_genre_horror_shimmer"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button_genre_thriller_shimmer"
                app:layout_constraintTop_toBottomOf="@+id/button_genre_fantasy_shimmer" />

            <View
                android:id="@+id/title_top_filter_shimmer"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_genre_thriller_shimmer" />

            <View
                android:id="@+id/list_item"
                android:layout_width="115dp"
                android:layout_height="140dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_top_filter_shimmer" />

            <View
                android:id="@+id/list_item1"
                android:layout_width="115dp"
                android:layout_height="140dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintStart_toEndOf="@+id/list_item"
                app:layout_constraintTop_toBottomOf="@+id/title_top_filter_shimmer" />

            <View
                android:id="@+id/list_item2"
                android:layout_width="115dp"
                android:layout_height="140dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/list_item1"
                app:layout_constraintTop_toBottomOf="@+id/title_top_filter_shimmer" />

            <View
                android:id="@+id/list_item_name"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/list_item" />

            <View
                android:id="@+id/list_item1_name"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintStart_toEndOf="@+id/list_item_name"
                app:layout_constraintTop_toBottomOf="@+id/list_item1" />

            <View
                android:id="@+id/list_item2_name"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintStart_toEndOf="@+id/list_item1_name"
                app:layout_constraintTop_toBottomOf="@+id/list_item2" />

            <View
                android:id="@+id/list_item_genre"
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/list_item_name" />

            <View
                android:id="@+id/list_item1_genre"
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintStart_toEndOf="@+id/list_item_name"
                app:layout_constraintTop_toBottomOf="@+id/list_item1_name" />

            <View
                android:id="@+id/list_item2_genre"
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:layout_marginStart="75dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/corner_view_shimmer"
                app:layout_constraintStart_toEndOf="@+id/list_item1_name"
                app:layout_constraintTop_toBottomOf="@+id/list_item2_name" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</FrameLayout>