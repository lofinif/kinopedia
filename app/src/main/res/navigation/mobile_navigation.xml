<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.kinopedia.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_filmPageFragment"
            app:destination="@id/filmPageFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.example.kinopedia.ui.favourite.FavouriteFragment"
        android:label="@string/title_favorite"
        tools:layout="@layout/fragment_favourite" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.kinopedia.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.kinopedia.ui.search.SearchFragment"
        android:label="title_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/filmPageFragment"
        android:name="com.example.kinopedia.ui.film.FilmPageFragment"
        android:label="FilmPageFragment" />

</navigation>