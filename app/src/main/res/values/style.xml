<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="name_home">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title_home">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="view_all">
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="name_movie">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="name_actor">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="genre_movie">
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="year_movie">
        <item name="android:textSize">6sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#525252</item>
    </style>

    <style name="PrimaryColoredButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textSize">14sp</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:background">@drawable/button_main_home</item>
    </style>

    <style name="title_film_page">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="details_film_page">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="name_movie_film_page">
        <item name="android:textSize">26sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="name_original_movie_film_page">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/deep_grey</item>
    </style>


</resources>