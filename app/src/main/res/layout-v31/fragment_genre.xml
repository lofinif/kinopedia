<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.genre.view.GenreFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.kinopedia.ui.genre.viewmodel.GenreViewModel"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_home_background"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_genre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/prussian_blue">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/empty_background"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/title_toolbar_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:textAppearance="@style/toolbar_title"
                android:text=""
                />
        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/status_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            app:loadingStatusElement="@{viewModel.status}" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="51dp"
        android:clipToPadding="false"
        android:clipToOutline="true"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        listDataFilmsByGenre="@{viewModel.dataFilmsByFilter}"
        tools:listitem="@layout/search_item" />
    </FrameLayout>
</layout>